# Environment
NODE_ENV=development
IS_LOCAL_DEV=true

# Server
PORT=3001

# MinIO Configuration (Local Development)
# Set STORAGE_TYPE to 'local' for local file storage, 'minio' for MinIO, 's3' for AWS S3
STORAGE_TYPE=minio

# MinIO Local Development Settings
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_USE_SSL=false
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET_NAME=pdf-uploads

# AWS S3 Production Settings (uncomment when using S3)
# AWS_REGION=ap-northeast-1
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# S3_BUCKET_NAME=scimus-pdf-uploads

# Upload Settings
MAX_FILE_SIZE=104857600
# 100MB in bytes
PRESIGNED_URL_EXPIRY=300
# 5 minutes in seconds
